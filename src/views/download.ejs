 <style>
    /* small overrides to match the original design and center the download block */
    .app-download-section{
      padding: 60px 0;
      background: #f7f9fb;
      position: relative;
    }
    .download-card{
      max-width: 980px;
      margin: 0 auto;
      display: flex;
      gap: 30px;
      align-items: center;
      background: rgba(13,53,88,0.03);
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 6px 18px rgba(13,53,88,0.06);
    }
    .download-left{
      flex: 1;
      min-width: 260px;
      text-align: left;
    }
    .download-left h1{ font-size: 28px; margin: 0 0 8px; color: #0D3558; }
    .download-left p{ margin:0 0 16px; color: #333; }
    .android-badge {
      display: inline-block;
      text-decoration: none;
      text-align: center;
      margin-top: 8px;
    }
    .android-badge img{
      width: 110px;
      height: auto;
      display:block;
      margin: 0 auto 8px;
      cursor: pointer;
    }
    .android-badge .download-text{
      display:block;
      font-weight:700;
      padding: 8px 12px;
      border-radius: 6px;
      background:#0D3558;
      color:white;
      cursor:pointer;
      text-decoration:none;
      width: fit-content;
      margin: 0 auto;
    }

    .download-right{
      width: 360px;
      display:flex;
      align-items:center;
      justify-content:center;
      gap:12px;
      flex-direction: column;
    }
    .placeholder-img{
      width: 320px;
      height: 200px;
      border-radius:8px;
      border: 2px dashed rgba(13,53,88,0.15);
      display:flex;
      align-items:center;
      justify-content:center;
      color: #666;
      font-size: 14px;
      background: #fff;
    }

    /* responsive */
    @media (max-width: 880px){
      .download-card{flex-direction: column; text-align:center;}
      .download-right{width:100%;}
    }
  </style>

